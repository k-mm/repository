<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Constructive &amp; Co.</title>
  </head>
  <body>
    <h1>Constructive &amp; Co.</h1>
    <script>

      //declare variables
      var today = new Date();
      var hourNow = today.getHours();
      var greeting;

      //setup the conditional statement
      if (hourNow > 18) {
         greeting = "Good evening!"
      } else if (hourNow > 12) {
         greeting = "Good afternoon"
      } else if (hourNow >0) {
         greeting = "Good morning!"
      } else {
         greeting = "Welcome!"
      }

      document.write(greeting);

    </script>

  </body>
</html>
